// Check whether it's a prime number 
int main(){

	int number;

	output("Enter the number: ");
	input(number);

    int i;
    output(number/2);
    output("\n");
    for (i = 2; i < number; i=i+1) {
        output(number%i);
        if (number % i != 0){
            continue;
        }
        else{
            output("It is not a prime number.\n");
			return 0;
		}
    }
	output("It is a prime number.\n");

    return 0;
}
